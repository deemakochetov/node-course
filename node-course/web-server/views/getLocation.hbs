<body>
  <p class="fw-light fs-2">Type your location to get the current weather</p>
  <form>
    <div class="mb-3">
      <label for="locationInput" class="form-label">Your location</label>
      <input type="text" class="form-control" id="locationaImport">
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="geoCheck">
      <label class="form-check-label" for="geoCheck">Get exact location</label>
    </div>
    <button type="submit" class="btn btn-primary">Tell me the weather</button>
  </form>
